<p id="notice"><%= notice %></p>

<p>
  <strong>Roomid:</strong>
  <%= @room.roomid %>
</p>

<p>
  <strong>Size:</strong>
  <%= @room.size %>
</p>

<p>
  <strong>Building:</strong>
  <%= @room.building %>
</p>

<p> Booking history </p>

<p>All the time slots are 2 hour slots.</p>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.date %></td>
        <td><%= booking.start_time.hour%>:00</td>
        <td><%= booking.start_time.hour+2%>:00</td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
