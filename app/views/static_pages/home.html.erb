<% if !libraryuser_logged_in? &&  !admin_logged_in?%>
    <div class="center jumbotron">
      <h1>Welcome to Library Room Booking App</h1>
      <%= link_to "Admin Login" , login_admin_path, class: "btn btn-lg btn-default" %>
      <%= link_to "Library User Login" , login_path, class: "btn btn-lg btn-default" %>
      <%= link_to "New to Library => Signup!" , new_libraryuser_path, class: "btn btn-lg btn-default" %>
    </div>

<% end %>
<% if admin_logged_in? %>
    <div class="center jumbotron">
      <h1>Welcome Admin</h1>
      <h2><%= link_to "Edit Profile",  edit_admin_path(session[:admin_id]), class: "btn btn-block btn-default"%></h2>
      <h2><%= link_to "Manage Admins", admins_path, class: "btn btn-block btn-default" %></h2>
      <h2><%= link_to "Manage Users", libraryusers_path, class: "btn btn-block btn-default"%></h2>
      <h2><%= link_to "Manage Rooms", rooms_path, class: "btn btn-block btn-default"%></h2>
      <h2><%= link_to "Bookings", bookings_path, class: "btn btn-block btn-default"%></h2>

    </div>
<% end %>
<% if libraryuser_logged_in? %>
    <div class="center jumbotron">
      <h1>Welcome to Library Room Booking System</h1>
      <h2><%= link_to "View Rooms", rooms_path, class: "btn btn-block btn-default"%></h2>
      <h2><%= link_to "Book a Room", new_booking_path, class: "btn btn-block btn-default"%></h2>
      <h2><%= link_to "My Bookings", bookings_path, class: "btn btn-block btn-default"%></h2>
      <h2><%= link_to "Edit Profile",edit_libraryuser_path(session[:libraryuser_id]), class: "btn btn-block btn-default"%></h2>
    </div>
<% end %>
